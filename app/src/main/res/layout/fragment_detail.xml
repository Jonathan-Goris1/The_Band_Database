<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="controller.DetailFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="8dp"
        android:src="@drawable/band_photo"
        />

    <TextView
        android:id="@+id/band_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/bandName"
        tools:text="band name"/>

    <TextView
        android:id="@+id/band_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/bandDescription"
        tools:text="description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Youtube Link"
        android:textSize="24sp"
        android:padding="8dp"
        android:text="@string/youtube_link"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="List of Songs"
        android:text="@string/list_of_songs"
        android:padding="8dp"
        android:textSize="24sp"/>

</LinearLayout>